<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".NotesActivity">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4894FE"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FeedFlow"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:id="@+id/txtDeviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Device Connected"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>


            <!-- Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#D9D9D9"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:clipToOutline="true">

                <!-- Dead Fish -->
                <EditText
                    android:id="@+id/editTextDeadFish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of dead fish"
                    android:inputType="number"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <!-- Temperature -->
                <EditText
                    android:id="@+id/editTextTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Temperature (Â°C)"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <!-- Weather & Feeding Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <Spinner
                        android:id="@+id/spinnerWeather"
                        android:entries="@array/weather_array"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_bg"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="12dp" />

                    <Spinner
                        android:id="@+id/spinnerFeedingTime"
                        android:entries="@array/feeding_array"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:background="@drawable/spinner_bg"
                        android:padding="12dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Feed Type & Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <Spinner
                        android:id="@+id/spinnerBehaviour"
                        android:entries="@array/behaviour_array"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg"
                        android:padding="12dp"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginBottom="8dp" />


                    <EditText
                        android:id="@+id/editTextAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Amount (kg)"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- Notes -->
                <EditText
                    android:id="@+id/editTextNotes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Additional Observations..."
                    android:gravity="top"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Record Button -->
                <Button
                    android:id="@+id/btnRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold"
                    android:backgroundTint="#3AB4FF"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- Saved Notes Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D9D9D9"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All saved Notes"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <!-- RecyclerView for saved notes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
