<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".NotesActivity">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#3AB4FF"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:clipToOutline="true"
                android:backgroundTint="#3AB4FF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FeedFlow"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold" />

            </LinearLayout>

            <!-- Input Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Dead Fish -->
                    <EditText
                        android:id="@+id/editTextDeadFish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of dead fish"
                        android:inputType="number"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Temperature -->
                    <EditText
                        android:id="@+id/editTextTemp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Temperature (Â°C)"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Weather & Feeding Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerWeather"
                            android:entries="@array/weather_array"
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="12dp"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerFeedingTime"
                            android:entries="@array/feeding_array"
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/spinner_bg"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="12dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Behaviour & Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerBehaviour"
                            android:entries="@array/behaviour_array"
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:padding="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/editTextAmount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:hint="Amount (kg)"
                            android:inputType="numberDecimal"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_bg"
                            android:padding="12dp" />
                    </LinearLayout>

                    <!-- Notes -->
                    <EditText
                        android:id="@+id/editTextNotes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Additional Observations..."
                        android:gravity="top"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Record Button -->
                    <Button
                        android:id="@+id/btnRecord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Record"
                        android:fontFamily="@font/poppins_bold"
                        android:textStyle="bold"
                        android:backgroundTint="#3AB4FF"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Saved Notes Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Notes"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"/>
</RelativeLayout>
