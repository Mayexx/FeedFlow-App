<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9F9F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Updated: --"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#777777" />

                <TextView
                    android:id="@+id/tvTodayFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today: -- kg"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvFeedLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feed Level: --%"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#333333" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Weekly Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Feeding Summary"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <GridLayout
                    android:id="@+id/gridWeeklyFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:rowCount="1"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins">

                    <!-- Example placeholders (will be filled dynamically) -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Mon\n--kg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#333"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Tue\n--kg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#333"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Wed\n--kg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#333"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Thu\n--kg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#333"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Fri\n--kg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#333"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Sat\n--kg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#333"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Sun\n--kg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#333"/>
                </GridLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAverageFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Average Daily Feed: -- kg"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvFeedEfficiency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feed Efficiency: -- FCR"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
