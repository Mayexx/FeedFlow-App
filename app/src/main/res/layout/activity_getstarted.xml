<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".GetStartedActivity">

    <!-- FeedFlow Logo -->

    <!-- Description 1 -->

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="379dp"
        android:layout_height="560dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="FeedFlow Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/feedflow_logo"
        app:layout_constraintBottom_toTopOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="319dp"
        android:layout_height="82dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="This app helps you keep an eye on seawater temperature and feed your milkfish automatically â€” no more guessing, no more stress."
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage" />

    <!-- Description 2 -->

    <!-- Get Started Button -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Ready to make fish farming easier and smarter?"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <Button
        android:id="@+id/buttonGetStarted"
        android:layout_width="313dp"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/button_outline_blue"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/poppins_regular"
        android:text="Get Started"
        android:textColor="#4894FE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
