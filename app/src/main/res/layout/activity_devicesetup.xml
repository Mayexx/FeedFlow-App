<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="24dp">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/setupCard"
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:padding="24dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/setupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Set Up"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp" />

            <!-- Progress Text -->
            <TextView
                android:id="@+id/searchingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searching for device..."
                android:textColor="#4894FE"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular" />

            <!-- Progress Bar -->
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:indeterminate="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:progressTint="#4894FE" />

            <!-- Bluetooth Icon -->
            <ImageView
                android:id="@+id/bluetoothIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_bluetooth"
                android:backgroundTint="#4894FE"
                android:layout_marginBottom="24dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/setupDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make sure your FeedFlow device is\npowered on and within range.\nWe're searching for nearby devices..."
                android:textAlignment="center"
                android:textColor="#555555"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Device Dropdown Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Device"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Spinner -->
            <Spinner
                android:id="@+id/deviceSpinner"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:spinnerMode="dropdown" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4894FE"
                android:fontFamily="@font/poppins_bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
